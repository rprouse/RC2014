# EditorConfig helps developers define and
# maintain consistent coding styles between
# different editors and IDEs

# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Don't use tabs for indentation.
[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = crlf

[*.asm]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
