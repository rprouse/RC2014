MAKE=make
MAKECMDGOALS=

default:
	@$(MAKE) -C chap4 $(MAKECMDGOALS)
	@$(MAKE) -C chap5 $(MAKECMDGOALS)
	@$(MAKE) -C chap6 $(MAKECMDGOALS)
	@$(MAKE) -C chap7 $(MAKECMDGOALS)
	@$(MAKE) -C chap8 $(MAKECMDGOALS)
	@$(MAKE) -C chap9 $(MAKECMDGOALS)

all:
	@$(MAKE) -C chap4 $(MAKECMDGOALS) all
	@$(MAKE) -C chap5 $(MAKECMDGOALS) all
	@$(MAKE) -C chap6 $(MAKECMDGOALS) all
	@$(MAKE) -C chap7 $(MAKECMDGOALS) all
	@$(MAKE) -C chap8 $(MAKECMDGOALS) all
	@$(MAKE) -C chap9 $(MAKECMDGOALS) all

clean:
	@$(MAKE) -C chap4 $(MAKECMDGOALS) clean
	@$(MAKE) -C chap5 $(MAKECMDGOALS) clean
	@$(MAKE) -C chap6 $(MAKECMDGOALS) clean
	@$(MAKE) -C chap7 $(MAKECMDGOALS) clean
	@$(MAKE) -C chap8 $(MAKECMDGOALS) clean
	@$(MAKE) -C chap9 $(MAKECMDGOALS) clean
