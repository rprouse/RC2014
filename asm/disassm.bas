130 PRINT" ";: PHEX=RES: GOSUB 3100:PRINT" ";

REM DIVISION IN ROWS -> GOSUBS

140  ON INT(RES/64)+1 GOSUB 1000,1400,1800,2000
170  PRINT
180 NEXT I
190 ADRS=I: IF LOLI=2 GOTO 100
195 GOTO 20
200 GOSUB 3500
